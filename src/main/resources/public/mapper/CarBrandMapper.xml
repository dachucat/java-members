<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="course.linkflower.link.oneframework.members.dao.CarBrandMapper">
    <insert id="add" parameterType="course.linkflower.link.oneframework.members.model.CarBrand"
            useGeneratedKeys="true" keyProperty="id">
        insert into car_brand (icon,name,car_company_id)
        value(#{icon},#{name},#{carCompanyId})
    </insert>

    <delete id="deleteById">
        delete from car_brand where id=#{id}
    </delete>

    <update id="update">
        update car_brand set icon=#{icon}, name=#{name}, car_company_id=#{carCompanyId} where id=#{id}
    </update>

    <select id="getCarBrandById" resultType="course.linkflower.link.oneframework.members.vo.carbrand.CarBrandNoIdVo">
        select * from car_brand where id=#{id}
    </select>

    <select id="listNameByCarCompanyId" resultType="course.linkflower.link.oneframework.members.vo.carbrand.CarBrandNoIdVo">
        select name from car_brand where car_company_id=#{id}
    </select>

    <select id="countSameIcon" resultType="int">
        select(*) from car_brand where icon=#{icon}
    </select>

    <select id="getIdByIcon" resultType="long">
        select id from car_brand where icon=#{icon}
    </select>
    
    <select id="getNameById" resultType="String">
        select name from car_brand where id=#{id}
    </select>
    
    <select id="getCarCompanyIdById" resultType="String">
        select car_company_id from car_brand where id=#{id}
    </select>
</mapper>