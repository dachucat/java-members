<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="course.linkflower.link.oneframework.members.dao.BookTypeMapper">
    <insert id="add" parameterType="course.linkflower.link.oneframework.members.model.BookOfType" useGeneratedKeys="true" keyProperty="id">
        insert into book_of_type set(#{bookInforId},#{bookTypeId},#{level})
    </insert>
    
    <select id="getBookOfTypeById" resultType="course.linkflower.link.oneframework.members.vo.bookoftype.BookOfTypeVo">
        select * from book_of_type where book_infor_if=#{bookInforId}, book_type_id=#{bookTypeId}
    </select>
</mapper>