<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="course.linkflower.link.oneframework.members.dao.PublisherMapper">

    <select id="publisherSearchById" resultType="course.linkflower.link.oneframework.members.model.Publisher">
        select * from publisher where id= #{id} limit 1;
    </select>

    <insert id="save">
        INSERT INTO publisher( `name`)
        VALUES( #{name} )
    </insert>

    <update id="delete">
        delete from publisher where id = #{id}
    </update>
    <update id="update">
        update publisher where id = #{id} set name = #{name}
    </update>

    <select id="listByIds" resultType="course.linkflower.link.oneframework.members.model.Publisher">
        select * from publisher where id in
        <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>