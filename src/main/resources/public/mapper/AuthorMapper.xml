<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="course.linkflower.link.oneframework.members.dao.AuthorMapper">
    <insert id="addAuthor" parameterType="course.linkflower.link.oneframework.members.model.Author"  useGeneratedKeys="true" keyProperty="id">
        INSERT INTO author(name,phone,country,address,mail,remark)
        VALUES(#{name},#{phone},#{country},#{address},#{mail},#{remark})
    </insert>

    
    <select id="getAuthorById" resultType="course.linkflower.link.oneframework.members.vo.author.AuthorVo">
        select * from author where id=#{id} limit 1;
    </select>

    <update id="updateAuthor" parameterType="course.linkflower.link.oneframework.members.model.Author"  useGeneratedKeys="true" keyProperty="id">
        update author set phone=#{phone}, country=#{country}, address=#{address}, mail=#{mail}, remark=#{remark} where id=#{id}
    </update>

    <delete id="deleteAuthorById">
        delete from author where id=#{id}
    </delete>
</mapper>