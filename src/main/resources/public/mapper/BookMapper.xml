<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="course.linkflower.link.oneframework.members.dao.BookMapper">

    <select id="bookSearchById" resultType="course.linkflower.link.oneframework.members.model.Book">
        select * from book where id= #{id} limit 1;
    </select>

    <select id="bookSearchByName" resultType="course.linkflower.link.oneframework.members.model.Book">
        select * from book where name = #{name} limit 1;
    </select>

    <select id="bookSearch" resultType="course.linkflower.link.oneframework.members.model.Book">
        select * from book where name = #{name};
    </select>

    <insert id="save">
        INSERT INTO book( `book_infor_id` , `in_library_date`)
        VALUES( #{bookinforid}  , #{inlibrarydate} )
    </insert>

    <update id="delete">
        delete from book where id = #{id}
    </update>
    <update id="update">
        update book set
        book_infor_id = #{bookInfoId}
    </update>

</mapper>