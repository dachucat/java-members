<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="course.linkflower.link.oneframework.members.dao.BorrowRequestMapper">

    <select id="borrowRequestSearchByid" resultType="course.linkflower.link.oneframework.members.model.BorrowRequest">
        select * from borrow_request where id= #{id} limit 1;
    </select>

    <insert id="save">
        INSERT INTO borrow_request ( `client_id` , `book_infor_id`)
        VALUES( #{clientId} , #{bookInfoId} )
    </insert>

    <update id="delete">
        delete from borrow_request where id = #{id}
    </update>
    <update id="update">
        update borrow_request set
        book_infor_id = #{bookInfoId}
    </update>

</mapper>