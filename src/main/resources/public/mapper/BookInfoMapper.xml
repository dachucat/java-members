<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="course.linkflower.link.oneframework.members.dao.BookInfoMapper">

    <select id="bookInfoSearchById" resultType="course.linkflower.link.oneframework.members.model.BookInfo">
        select * from book_infor where id= #{id} limit 1;
    </select>

    <insert id="save">
        INSERT INTO book_infor( `name`)
        VALUES( #{name} )
    </insert>

    <update id="delete">
        delete from book_infor where id = #{id}
    </update>
    <update id="update">
        update book_infor set
        name = #{name}
    </update>

    <select id="getDetailById" resultType="course.linkflower.link.oneframework.members.vo.book.BookVo">
        select bi.name as name, p.name as publisher, b.* from book_infor bi JOIN book b on bi.id = b.book_infor_id left JOIN publisher p on p.id  = bi.publisher_id where b.id  = #{id}
    </select>

</mapper>